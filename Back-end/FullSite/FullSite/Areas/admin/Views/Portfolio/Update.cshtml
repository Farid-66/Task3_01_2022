@model Portfolio
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-5">
            <form asp-area="admin" asp-controller="Portfolio" asp-action="Update" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <img src="~/Upload/@Model.Image" alt="Alternate Text" width="100" />
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input asp-for="@Model.Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">
                        Content
                    </label>
                    <textarea class="form-control" asp-for="@Model.Content" rows="3"></textarea>
                </div>
                <input asp-for="@Model.ID" hidden />
                <input asp-for="@Model.Image" hidden />
                <input asp-for="@Model.CreateDate" hidden />

                <div class="btns mb-4">
                    <button type="submit" class="btn btn-info btn-circle" title="Create Card">
                       <i class="far fa-edit"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

