@model Main
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <form asp-area="admin" asp-controller="About" asp-action="Update" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">
                        Content
                    </label>
                    <textarea class="form-control" asp-for="@Model.About"  rows="20"></textarea>
                </div>

                <input asp-for="@Model.ID" hidden />
                <input asp-for="@Model.Title" hidden />
                <input asp-for="@Model.Substring" hidden />
                <input asp-for="@Model.Profile" hidden />
                <div class="btns mb-4">
                    <button type="submit" class="btn btn-warning btn-circle" title="Edit">
                        <i class="far fa-edit"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


