@model Main
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-5">
                <form asp-area="admin" asp-controller="Header" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="text-center mb-5">
        <img src="~/Uploads/@Model.Profile" alt="Alternate Text" width="100" />
            </div>

                    <div class="mb-3">
                        <label asp-for="@Model.ImageFile" class="form-label">Profile</label>
                        <input class="form-control" type="file" asp-for="@Model.ImageFile">
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                        <input class="form-control" asp-for="@Model.Title" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Substring" class="form-label">Substring</label>
                        <input class="form-control" asp-for="@Model.Substring" />
                    </div>
                    <input asp-for="@Model.ID" hidden />
                    <input asp-for="@Model.Profile" hidden />
                    <input asp-for="@Model.About" hidden />

                    <div class="btns mb-4">
                        <button type="submit" class="btn btn-warning btn-circle" title="Edit">
                            <i class="far fa-edit"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

