
@model VmHome
@{
    ViewData["Title"] = "Home Page";
}

        <section id="head">
            <div class="container d-flex align-items-center flex-column">
                <img class="masthead_avatar" width="250px" height="250px" src="assets/img/avataaars.svg" alt="..." />
                <h1 class="">@Model.Main.Title</h1>

                <div class="divider">
                    <div class="divider_line"></div>
                    <div class="divider_icon"><i class="fas fa-star"></i></div>
                    <div class="divider_line"></div>
                </div>

                <p class="">@Model.Main.Substring</p>
            </div>
        </section>

        <section id="portfolio">

            <div class="container">

                <div class="sectitle">
                    <h2 class="">PORTFOLIO
                    </h2>

                    <div class="divider ">
                        <div class="divider_line"></div>
                        <div class="divider_icon"><i class="fas fa-star"></i></div>
                        <div class="divider_line"></div>
                    </div>
                </div>

                <div class="row justify-content-center">

                    @foreach (var item in Model.Portfolio)
                    {
                        <div class="col-md-6 col-lg-4 mb-5">
                        <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#@item.ID">
                            <div
                                class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i
                                        class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/Uploads/@item.Image" alt="..." />
                        </div>
                    </div>

                    <div class="portfolio-modal modal fade " style="margin-top: 100px;" id="@item.ID" tabindex="-1" aria-labelledby="@item.ID" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                <div class="modal-body text-center pb-5">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- Portfolio Modal - Title-->
                                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.Title</h2>
                                <!-- Icon Divider-->
                                <div class="divider-custom">
                                    <div class="divider-custom-line"></div>
                                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                    <div class="divider-custom-line"></div>
                                </div>
                                <!-- Portfolio Modal - Image-->
                                <img class="img-fluid rounded mb-5" src="~/Uploads/@item.Image" alt="..." />
                                <!-- Portfolio Modal - Text-->
                                <p class="mb-4">@item.Content</p>
                                <button class="btn btn-primary" href="#!" data-bs-dismiss="modal">
                                    <i class="fas fa-times fa-fw"></i>
                                    Close Window
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                    }
                    
                </div>
            </div>

        </section>

        <section id="about">
            <div class="container">

                <div class="sectitle">
                    <h2 class="">ABOUT</h2>

                    <div class="divider ">
                        <div class="divider_line"></div>
                        <div class="divider_icon"><i class="fas fa-star"></i></div>
                        <div class="divider_line"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            @Model.Main.About
                        </p>
                    </div>
                </div>
            </div>
        </section>
